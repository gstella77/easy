{
  "extends": "../../tslint.json",
  "rules": {
    "component-selector": [
      true,
      "element",
      "ez",
      "kebab-case"
    ],
    "directive-selector": [
      true,
      "attribute",
      "ez",
      "camelCase"
    ],    
    "only-arrow-functions": false,
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore"
      ]
    }
  }
}
