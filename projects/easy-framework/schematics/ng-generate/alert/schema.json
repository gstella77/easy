{
  "$schema": "http://json-schema.org/schema",
  "id": "ngGenerateAlert",
  "properties": {
    "close": {
      "default": true,
      "description": "Whether the alert has a close button.",
      "type": "boolean",
      "x-prompt": "Add a close button?"
    },
    "export": {
      "type": "boolean",
      "default": false,
      "description": "When true, the declaring module exports this component."
    },
    "flat": {
      "type": "boolean",
      "default": false,
      "description": "Flag to indicate if a directory is created."
    },
    "import": {
      "type": "boolean",
      "default": true,
      "description": "Specifies if the alert should be imported in the declaring module.",
      "x-prompt": "Import alert module?"
    },
    "lintFix": {
      "type": "boolean",
      "default": false,
      "description": "Specifies whether to apply lint fixes after generating the component."
    },
    "message": {
      "default": "New alert",
      "description": "The alert text.",
      "type": "string",
      "x-prompt": "What is the alert text?"
    },
    "module": {
      "type": "string",
      "description": "Allows specification of the declaring module.",
      "alias": "m"
    },
    "name": {
      "default": "alert",
      "description": "The name of the alert.",
      "type": "string",
      "x-prompt": "What is the name of the alert?"
    },
    "path": {
      "description": "The path to create the alert.",
      "format": "path",
      "type": "string",
      "visible": false
    },
    "project": {
      "$default": {
        "$source": "projectName"
      },
      "description": "The name of the project.",
      "type": "string"
    },
    "skipTests": {
      "type": "boolean",
      "default": false,
      "description": "When true, does not create 'spec.ts' test file for the new component."
    },
    "type": {
      "default": "good",
      "description": "The type of alert",
      "type": "string",
      "x-prompt": {
        "items": [
          {
            "label": "bad",
            "value": "bad"
          },
          {
            "label": "good",
            "value": "good"
          },
          {
            "label": "info",
            "value": "info"
          },
          {
            "label": "warn",
            "value": "warn"
          }
        ],
        "message": "Choose an alert type:",
        "type": "list"
      }
    }
  },
  "required": [
    "close",
    "message",
    "name",
    "type"
  ],
  "title": "Generate Alert",
  "type": "object"
}
