{
  "$schema": "http://json-schema.org/schema",
  "id": "addAlert",
  "properties": {
    "changeDetection": {
      "alias": "c",
      "default": "Default",
      "description": "Specifies the change detection strategy.",
      "enum": [
        "Default",
        "OnPush"
      ],
      "type": "string"
    },
    "close": {
      "default": true,
      "description": "Specifies if the component will have a close button.",
      "type": "boolean",
      "x-prompt": "Should the component have a close button?"
    },
    "entryComponent": {
      "default": false,
      "description": "Specifies if the component is an entry component of declaring module.",
      "type": "boolean"
    },
    "export": {
      "default": false,
      "description": "Specifies if declaring module exports the component.",
      "type": "boolean"
    },
    "flat": {
      "default": false,
      "description": "Specifies if a directory is created.",
      "type": "boolean"
    },
    "inlineStyle": {
      "alias": "s",
      "default": false,
      "description": "Specifies if the style will be in the ts file.",
      "type": "boolean"
    },
    "inlineTemplate": {
      "alias": "t",
      "default": false,
      "description": "Specifies if the template will be in the ts file.",
      "type": "boolean"
    },
    "message": {
      "default": "New Alert",
      "description": "Specifies the component message.",
      "type": "string",
      "x-prompt": "What should be the component message?"
    },
    "module": {
      "alias": "m",
      "description": "Allows specification of the declaring module.",
      "type": "string"
    },
    "name": {
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "default": "alert",
      "description": "The name of the component.",
      "type": "string",
      "x-prompt": "What should be the name of the component?"
    },
    "path": {
      "description": "The path to create the component.",
      "format": "path",
      "type": "string",
      "visible": false
    },
    "prefix": {
      "alias": "p",
      "description": "The prefix to apply to generated selectors.",
      "format": "html-selector",
      "type": "string"
    },
    "project": {
      "$default": {
        "$source": "projectName"
      },
      "description": "The name of the project.",
      "type": "string"
    },
    "selector": {
      "description": "The selector to use for the component.",
      "format": "html-selector",
      "type": "string"
    },
    "skipImport": {
      "default": false,
      "description": "When true, skips the module import.",
      "type": "boolean"
    },
    "skipSelector": {
      "default": false,
      "description": "Specifies if the component should have a selector or not.",
      "type": "boolean"
    },
    "skipTests": {
      "description": "When true, does not generate a test file.",
      "type": "boolean"
    },
    "style": {
      "description": "The file extension to be used for style files.",
      "type": "string"
    },
    "type": {
      "default": "good",
      "description": "Specifies if component type.",
      "type": "string",
      "x-prompt": {
        "items": [
          {
            "label": "bad",
            "value": "bad"
          },
          {
            "label": "good",
            "value": "good"
          },
          {
            "label": "info",
            "value": "info"
          },
          {
            "label": "warn",
            "value": "warn"
          }
        ],
        "message": "Choose the component type:",
        "type": "list"
      }
    },
    "viewEncapsulation": {
      "alias": "v",
      "description": "Specifies the view encapsulation strategy.",
      "enum": [
        "Emulated",
        "None"
      ],
      "type": "string"
    }
  },
  "required": [
    "close",
    "name",
    "message",
    "type"
  ],
  "title": "Easy Alert Schema",
  "type": "object"
}
