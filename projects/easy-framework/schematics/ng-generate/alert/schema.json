{
  "$schema": "http://json-schema.org/schema",
  "id": "ngGenerateAlert",
  "title": "Generate Alert",
  "type": "object",
  "properties": {
    "close": {
      "default": true,
      "description": "Whether the alert has a close button.",
      "type": "boolean",
      "x-prompt": "Add a close button?"
    },
    "message": {
      "description": "The alert text.",
      "type": "string",
      "x-prompt": "What is the alert text?"
    },
    "name": {
      "description": "The name of the alert.",
      "type": "string",
      "x-prompt": "What should be the name of the alert?"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the alert.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    }
   },
  "required": [
    "name"
  ]
}
