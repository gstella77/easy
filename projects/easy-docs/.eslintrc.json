{
  "extends": [
    "../../.eslintrc.json"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "createDefaultProgram": true,
        "project": [
          "tsconfig.*?.json"
        ]
      },
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "prefix": "docs",
            "style": "kebab-case",
            "type": "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "docs",
            "style": "camelCase",
            "type": "attribute"
          }
        ],
        "@angular-eslint/pipe-prefix": [
          "error",
          {
            "prefixes": [
              "docs"
            ]
          }
        ],
        "max-len": [
          "error",
          {
            "code": 180
          }
        ]
      }
    },
    {
      "files": [
        "*.component.html"
      ],
      "rules": {
        "max-len": [
          "error",
          {
            "code": 600
          }
        ]
      }
    }
  ]
}
