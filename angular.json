{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "easy-docs": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "docs",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/easy-docs",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.app.json",
            "assets": [
              "src/favicon.ico"
            ],
            "styles": [
              "src/styles.scss"
            ],
             "stylePreprocessorOptions": {
              "includePaths": [
                "projects/easy/src/lib/core",
                "projects/easy/src/lib/shared",
                "projects/easy/src/assets/sass"
              ]
            }
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "easy-docs:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "easy-docs:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "easy-docs:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "karmaConfig": "src/karma.conf.js",
            "codeCoverage": true,
            "styles": [
              "src/styles.scss"
            ],
             "stylePreprocessorOptions": {
              "includePaths": [
                "projects/easy/src/lib/core",
                "projects/easy/src/lib/shared",
                "projects/easy/src/assets/sass"
              ]
            },
            "assets": [
              "src/favicon.ico"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "fix": true,
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "easy-docs-e2e": {
      "root": "e2e/",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./e2e/protractor.conf.js",
            "devServerTarget": "easy-docs:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "easy-docs:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": "e2e/tsconfig.e2e.json",
            "fix": true,
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "easy": {
      "root": "projects/easy",
      "sourceRoot": "projects/easy/src",
      "projectType": "library",
      "prefix": "ez",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss",
          "inlineStyle": false,
          "inlineTemplate": false,
          "export": true,
          "flat": true,
          "spec": true
        },
        "@schematics/angular:directive": {
          "export": true,
          "flat": true,
          "spec": true
        },
        "@schematics/angular:module": {
          "commonModule": false,
          "module": "components",
          "export": true,
          "flat": false,
          "spec": true
        },
        "@schematics/angular:service": {
          "export": true,
          "flat": true,
          "spec": true
        },
        "@schematics/angular:pipe": {
          "export": true,
          "flat": true,
          "spec": true
        },
        "@schematics/angular:class": {          
          "export": false,
          "flat": true,          
          "spec": false
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/easy/tsconfig.lib.json",
            "project": "projects/easy/ng-package.json"
          },
          "configurations": {
            "production": {
              "project": "projects/easy/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/easy/src/test.ts",
            "tsConfig": "projects/easy/tsconfig.spec.json",
            "karmaConfig": "projects/easy/karma.conf.js",
            "codeCoverage": true
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/easy/tsconfig.lib.json",
              "projects/easy/tsconfig.spec.json"
            ],
            "fix": true,
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "easy-docs"
}
