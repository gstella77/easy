{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
    "strictNullChecks": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
		"importHelpers": true,
		"target": "es2015",
		"typeRoots": [
      "node_modules/@types"
    ],
		"lib": [
      "es2018",
      "dom"
    ],
		"paths": {
      "easy-framework": [
        "projects/easy-framework/src"
      ]
		}
	},
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": true,
		"strictInjectionParameters": true
	}
}
