{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
        "strictNullChecks": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"module": "esnext",
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "es2015",
		"typeRoots": [
            "node_modules/@types"
        ],
		"lib": [
            "es2018",
            "dom"
        ],
		"paths": {
			"easy-framework": [
                "projects/easy-framework/src"
            ],
            "easy-framework/*": [
                "projects/easy-framework/*"
            ]
		}
	},
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": true,
		"strictInjectionParameters": true
	}
}
